<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bg_signup"
    >

    <com.facebook.widget.LoginButton

        android:id="@+id/buttonLoginFacebook"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="155dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageView" />

    <Button
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_pefil"
        android:textColor="@android:color/white"
        android:id="@+id/buttonPefil"
        android:textStyle="bold"
        android:background="@drawable/drawable_btn_default"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/buttonLoginFacebook"
        tools:ignore="UnusedAttribute" />

    <Button
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_request_josn"
        android:textColor="@android:color/white"
        android:id="@+id/buttonRequestJson"
        android:textStyle="bold"
        android:background="@drawable/drawable_btn_default"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/buttonPefil"
        tools:ignore="UnusedAttribute" />

    <Button
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_share"
        android:textColor="@android:color/white"
        android:id="@+id/buttonShare"
        android:textStyle="bold"
        android:background="@drawable/drawable_btn_default"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/buttonRequestJson"
        tools:ignore="UnusedAttribute" />





    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"

        android:background="@drawable/registrate_caja"
        android:layout_above="@+id/buttonLoginFacebook"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="28dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_below="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_below="@+id/editText3"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignStart="@+id/editText3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_below="@+id/editText4"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
